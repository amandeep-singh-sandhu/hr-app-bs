<div class="col-lg-12">
	<div class="font-weight-bold mt-2 text-center text-primary">
		<%= flash[:notice] %>
	</div>
	<h2 class="text-center mt-4 mb-4 font-weight-bold text-uppercase">
		Employees documents List
	</h2>
	<%# Link to new document template %>
	<div>
		<%= link_to 'Create new document', new_document_path, class: 'btn
		btn-primary btn-lg mb-4' %>
	</div>
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>Name</th>
				<th>Doc type</th>
				<th>Employee</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			<% @documents.each do |document| %>
			<tr>
				<td><%= document.name %></td>
				<td><%= document.doc_type %></td>
				<td><%= link_to document.employee.name, employee_path(document.employee) %></td>
				<td>
					<div class="dropdown">
						<a class="btn btn-primary btn-lg dropdown-toggle" href="#" id="navbarDropdown" role="button"
							data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							Actions
						</a>
						<div class="dropdown-menu" aria-labelledby="navbarDropdown">
							<%= link_to 'Edit', edit_document_path(document), class: 'dropdown-item' %>
							<%= link_to 'View', document_path(document), class: 'dropdown-item' %>
							<%= link_to 'Delete', document_path(document), class: 'dropdown-item', method: :delete, data: { confirm: 'Are you sure?' } %>
						</div>
					</div>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>